{% extends 'base.html.twig' %}
{% block title %}Home - Croco{% endblock %}
{% block stylesheets %}
<style>
    .album {
        box-shadow: 3px 3px 15px rgba(0, 0, 0, 0.65);
        width: 225px;
        height: 225px;
        margin-top: 27px;
        position: relative;
        z-index: 10;
    }

    .album .album-art {
        background: #fff url('https://media1.giphy.com/media/kV9HM9LbgrKIu2H3LI/giphy.gif') center / cover no-repeat;
        width: 225px;
        height: 225px;
        position: relative;
        z-index: 10;
    }

    .vinyl {
        animation: spin 2s linear infinite;
        transition: all 500ms;
        background-image: url('https://s3-us-west-2.amazonaws.com/s.cdpn.io/83141/vinyl.png'), url('assets/images/logoAure.png');
        background-position: center, center;
        background-size: cover, 40% auto;
        background-repeat: no-repeat;
        border-radius: 100%;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.8);
        width: 200px;
        height: 200px;
        position: absolute;
        left: 120px;
        top: 10px;
        will-change: transform, left;
    }

    @keyframes spin {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }
    }
</style>
{% endblock %}
{% block body %}
<div class="container">
    {% if ofTheDay is not null %}
