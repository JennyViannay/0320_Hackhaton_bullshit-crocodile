{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-lg-2 col-sm-12"></div>
        <div class="col-lg-8 col-sm-12 text-center">
            <div class="card bg-dark p-5 m-5" style="">
                <div class="text-center">
                    <img src="{{user.avatar}}" class="avatar" alt="avatar">
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{user.username}}</h5>
                    <p><small class="text-blue">{{user.email}}</small></p>
                    <p>Bio : <br><small class="text-blue">{{user.comment}}</small></p>
                    <p>Né.e le <br> <small class="text-blue">{{user.birthDate|date('d/m/Y')}}</small></p>
                    <p>🐊 Paradeals : <br> <small class="text-blue">{{user.bets|length}}</small></p>
                    <p>💩 Paracrotes : <br> <small class="text-blue">{{user.excuses|length}}</small></p>
                    {% if app.user == user %}
                    <div class="col-12 text-center">
                        <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-sm btn-green my-2">Modifier le
                            profil</a>
                        {{ include('user/_delete_form.html.twig') }}
                    </div>
                    {% endif %}
                </div>
                <div class="col-12 text-center mt-3">
                    <img src="{{asset('assets/images/logoAure.png')}}" alt="logo" class="img-fluid" width="150px">
                </div>
            </div>
            <div class="col-lg-2 col-sm-12"></div>
        </div>
    </div>
    {% endblock %}