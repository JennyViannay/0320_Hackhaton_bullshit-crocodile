{% extends 'base.html.twig' %}
{% block title %}Bullshiter - CrocoDeal{% endblock %}
{% block stylesheets %}
<style>
    @media (max-width: 768px) {
        audio {
            width: 250px;
        }

        .album {
            box-shadow: 3px 3px 15px rgba(0, 0, 0, 0.65);
            width: 150px;
            height: 150px;
            margin-top: 27px;
            position: relative;
            z-index: 10;
        }

        .album .album-art {
            background: #fff url('https://i.postimg.cc/yxZm0Y8F/aurethug.jpg') center / cover no-repeat;
            width: 150px;
            height: 150px;
            position: relative;
            z-index: 10;
            filter: grayscale(100%);
        }

        .vinyl {
            animation: spin 2s linear infinite;
            transition: all 500ms;
            background-image: url('https://s3-us-west-2.amazonaws.com/s.cdpn.io/83141/vinyl.png'), url('https://i.postimg.cc/yxZm0Y8F/aurethug.jpg');
            background-position: center, center;
            background-size: cover, 40% auto;
            background-repeat: no-repeat;
            border-radius: 100%;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.8);
            width: 125px;
            height: 125px;
            position: absolute;
            left: 85px;
            top: 10px;
            z-index: 5;
            will-change: transform, left;
            filter: grayscale(100%);
        }

        @keyframes spin {
            from {
                transform: rotate(0deg);
            }

            to {
                transform: rotate(360deg);
            }
        }
    }

    @media (min-width: 992px) {
