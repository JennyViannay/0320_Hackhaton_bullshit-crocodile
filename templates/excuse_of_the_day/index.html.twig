{% extends 'base.html.twig' %}

{% block title %}ExcuseOfTheDay index{% endblock %}

{% block body %}
    <h1>ExcuseOfTheDay index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Created_at</th>
                <th>Is_active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for excuse_of_the_day in excuse_of_the_days %}
            <tr>
                <td>{{ excuse_of_the_day.id }}</td>
                <td>{{ excuse_of_the_day.createdAt ? excuse_of_the_day.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ excuse_of_the_day.isActive ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('excuse_of_the_day_show', {'id': excuse_of_the_day.id}) }}">show</a>
                    <a href="{{ path('excuse_of_the_day_edit', {'id': excuse_of_the_day.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('excuse_of_the_day_new') }}">Create new</a>
{% endblock %}
